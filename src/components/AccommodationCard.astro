---
import { formatServiceDetails } from '../js/utils.js';

interface Props {
  title: string;
  image?: string | null;
  slogan?: string | null;
  territoryDescription?: string | null;
  address?: string | null;
  roomFeatures?: string[] | null;
  atmosphere?: string | null;
  locationDescription?: string | null;
  details?: string | null;
}

const { title, image, slogan, territoryDescription, roomFeatures, atmosphere, locationDescription, address, details } = Astro.props;
const formattedDetails = formatServiceDetails(details);
const hasDetails = !!(formattedDetails || territoryDescription || address || roomFeatures?.length || atmosphere || locationDescription);
const message = `Хочу узнать цены на: ${title}`;
const safeMessage = message.replace(/'/g, "\\'");
---

<div 
  class={`service-card bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition flex flex-col ${hasDetails ? 'is-clickable' : ''}`}
  onclick={hasDetails ? "toggleServiceAccordion(this)" : null}
  onkeydown={hasDetails ? "if(event.key === 'Enter' || event.key === ' ') { event.preventDefault(); toggleServiceAccordion(this); }" : null}
  role={hasDetails ? "button" : null}
  tabindex={hasDetails ? "0" : null}
  aria-expanded={hasDetails ? "false" : null}
>
  {image && (
    <div class="aspect-card overflow-hidden relative flex-shrink-0">
      <img 
        src={image} 
        alt={title} 
        width="600"
        height="450"
        class="w-full h-full object-cover object-center block hover:scale-105 transition-transform duration-700" 
        loading="lazy"
      />
    </div>
  )}

  <div class="bg-slate-50 p-5 border-b border-slate-100 flex-shrink-0 flex justify-between items-center gap-4">
    <h3 class="text-xl font-bold text-dark leading-tight">{title}</h3>
    {hasDetails && <div class="w-8 h-8 rounded-full bg-white shadow-sm flex items-center justify-center flex-shrink-0"><i class="ri-arrow-down-s-line accordion-chevron text-xl text-action transition-transform duration-300"></i></div>}
  </div>

  <div class="p-6 flex flex-col flex-grow">

    <p class="service-short-desc text-slate-800 font-medium whitespace-pre-wrap mb-3 leading-relaxed">{slogan}</p>
    
    {address && (
      <div class="flex items-start gap-2 mb-6 text-sm text-slate-500">
        <i class="ri-map-pin-line text-rose-500 mt-0.5 flex-shrink-0"></i>
        <span>{address}</span>
      </div>
    )}
    
    {hasDetails && (
      <div class="service-details-container">
        <div class="service-details-content space-y-6 text-sm text-slate-600">
          
          <div class="bg-orange-50/50 rounded-xl p-5 space-y-4">
              {territoryDescription && (
                 <div>
                   <h4 class="font-bold flex items-center text-dark mb-1.5"><i class="ri-home-smile-line text-orange-500 mr-2 text-lg"></i>Территория</h4>
                   <p class="pl-7 opacity-90">{territoryDescription}</p>
                 </div>
              )}
              
              {atmosphere && (
                 <div>
                   <h4 class="font-bold flex items-center text-dark mb-1.5"><i class="ri-sun-foggy-line text-amber-500 mr-2 text-lg"></i>Атмосфера</h4>
                   <p class="pl-7 opacity-90">{atmosphere}</p>
                 </div>
              )}

              {roomFeatures && roomFeatures.length > 0 && (
                 <div>
                   <h4 class="font-bold flex items-center text-dark mb-1.5"><i class="ri-hotel-bed-line text-blue-500 mr-2 text-lg"></i>Удобства в номере</h4>
                   <ul class="pl-7 list-disc list-outside opacity-90 marker:text-action space-y-1">
                      {roomFeatures.map(feature => <li>{feature}</li>)}
                   </ul>
                 </div>
              )}

              {(locationDescription || address) && (
                 <div>
                   <h4 class="font-bold flex items-center text-dark mb-1.5"><i class="ri-map-pin-line text-rose-500 mr-2 text-lg"></i>Локация</h4>
                   <p class="pl-7 opacity-90">{locationDescription || address}</p>
                 </div>
              )}
          </div>

          {formattedDetails && (
             <div class="prose prose-sm max-w-none prose-p:text-slate-600 prose-headings:text-dark prose-strong:text-dark prose-li:text-slate-600" set:html={formattedDetails}></div>
          )}
        </div>
      </div>
    )}
    
    <button 
      onclick={`event.stopPropagation(); openWhatsApp('${safeMessage}')`} 
      class="w-full bg-orange-500 text-white py-3 px-4 rounded-lg font-bold hover:bg-orange-600 transition mt-auto flex items-center justify-center"
    >
      <i class="ri-price-tag-3-line mr-2"></i>Узнать цены
    </button>
  </div>
</div>
