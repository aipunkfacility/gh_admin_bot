---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { schemas } from '../../../lib/schemas';
import { getItem } from '../../../lib/data-store';

const { collection, id } = Astro.params;
const isCreate = !id || id === 'create';

const collectionNames: Record<string, string> = {
    'excursions': 'Экскурсии',
    'transport-items': 'Транспорт',
    'accommodations': 'Жилье',
    'services': 'Услуги'
};

const schema = (schemas as Record<string, unknown>)[collection as string] as { fields: Array<{ label: string; name: string; required?: boolean; type: string; default?: unknown; help?: string }> };
if (!schema) {
    return Astro.redirect('/admin');
}

let item: Record<string, unknown> = {};
if (!isCreate) {
    const data = await getItem(`${collection}.json`, id as string);
    if (!data) {
        return Astro.redirect(`/admin/${collection}`);
    }
    item = data as Record<string, unknown>;
} else {
    schema.fields.forEach((f) => {
        if (f.default !== undefined) item[f.name] = f.default;
    });
}

const getValue = (obj: Record<string, unknown>, path: string): string => {
    // @ts-expect-error - dynamic path reduction
    const val = path.split('.').reduce((acc, part) => acc && (acc as Record<string, unknown>)[part], obj);
    return (val as string) || '';
};

const normalizeSrc = (src: string) => {
    if (!src) return '';
    if (src.startsWith('http') || src.startsWith('/')) return src;
    if (src.startsWith('./')) return src.replace('./', '/');
    return '/' + src;
};

const collectionTitle = collectionNames[collection as string] || collection;
const pageTitle = isCreate ? `Новая запись: ${collectionTitle}` : `Редактирование: ${item.title || id}`;
---

<AdminLayout title={pageTitle}>
    <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <a href={`/admin/${collection}`} class="inline-flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-action transition-colors mb-3">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                    {collectionTitle}
                </a>
                <h1 class="text-3xl font-extrabold text-dark tracking-tight leading-none">
                    {isCreate ? '✨ Новая запись' : `✏️ ${item.title || 'Редактирование'}`}
                </h1>
                <div class="h-1 w-12 bg-action mt-2"></div>
            </div>
            
            {!isCreate && (
                <button 
                    id="deleteBtn" 
                    data-id={id} 
                    data-title={item.title as string}
                    class="group px-6 py-4 bg-rose-50 hover:bg-rose-100 text-rose-500 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all flex items-center gap-2 border border-rose-100"
                >
                    <i class="ri-delete-bin-fill text-base group-hover:scale-110 transition-transform"></i>
                    Удалить
                </button>
            )}
        </div>

        <form id="editForm" class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="h-1 bg-gradient-to-r from-action to-amber-400"></div>
            
            <div class="p-8 md:p-10 space-y-8">
                {schema.fields.map((field, idx) => (
                    <div class="space-y-2 animate-fadeIn" style={`animation-delay: ${idx * 50}ms`}>
                        <label class="flex items-center gap-2 text-[10px] font-black text-slate-500 uppercase tracking-widest">
                            {field.label}
                            {field.required && <span class="text-action text-xs">*</span>}
                        </label>
                        
                        {field.type === 'text' && (
                            <input 
                                type="text" 
                                name={field.name} 
                                value={getValue(item, field.name)} 
                                required={field.required}
                                class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark"
                            />
                        )}

                        {field.type === 'textarea' && (
                            <textarea 
                                name={field.name} 
                                rows={5} 
                                required={field.required}
                                class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark resize-y min-h-[120px]"
                            >{getValue(item, field.name)}</textarea>
                        )}

                        {field.type === 'checkbox' && (
                            <label class="flex items-center gap-4 bg-slate-50 p-5 rounded-xl border border-slate-200 cursor-pointer hover:border-action/30 transition-all">
                                <div class="relative">
                                    <input 
                                        type="checkbox" 
                                        name={field.name} 
                                        checked={getValue(item, field.name) !== 'false'}
                                        class="peer sr-only"
                                    />
                                    <div class="w-12 h-7 bg-slate-300 rounded-full peer-checked:bg-action transition-colors"></div>
                                    <div class="absolute left-1 top-1 w-5 h-5 bg-white rounded-full shadow-sm peer-checked:translate-x-5 transition-transform"></div>
                                </div>
                                <div>
                                    <span class="text-sm font-bold text-dark block">{field.help || field.label}</span>
                                </div>
                            </label>
                        )}

                        {field.type === 'image' && (
                            <div class="image-upload-group space-y-4">
                                <div class="flex items-stretch gap-3">
                                    <input 
                                        type="text" 
                                        name={field.name} 
                                        value={getValue(item, field.name)} 
                                        class="image-path-input flex-1 px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark" 
                                        placeholder="/images/example.jpg"
                                    />
                                    <button 
                                        type="button" 
                                        class="upload-trigger-btn px-6 rounded-xl bg-dark text-white text-[10px] font-black uppercase tracking-widest hover:bg-slate-800 transition-all active:scale-[98%]"
                                    >
                                        Загрузить
                                    </button>
                                </div>
                                <div class="preview-container" style={getValue(item, field.name) ? '' : 'display:none'}>
                                    <div class="relative w-40 h-40 rounded-xl overflow-hidden border-2 border-slate-100 shadow-sm transition-all group/preview">
                                        <img src={normalizeSrc(getValue(item, field.name))} class="w-full h-full object-cover" alt="" />
                                        <div class="absolute inset-0 bg-dark/60 opacity-0 group-hover/preview:opacity-100 transition-opacity flex items-center justify-center">
                                            <span class="text-[10px] text-white font-black uppercase tracking-wider">Предпросмотр</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        )}
                        
                        {field.help && field.type !== 'checkbox' && (
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest flex items-center gap-1">
                                <i class="ri-information-line"></i> {field.help}
                            </p>
                        )}
                    </div>
                ))}
            </div>

            <div class="p-8 md:p-10 bg-slate-50 border-t border-slate-100 flex justify-between items-center gap-4">
                <a href={`/admin/${collection}`} class="px-6 py-3 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-dark transition-colors">
                    Отмена
                </a>
                <button 
                    type="submit" 
                    id="submitBtn"
                    class="px-8 py-4 bg-action hover:bg-action-hover text-white text-[10px] font-black uppercase tracking-widest rounded-xl shadow-lg shadow-orange-500/20 transition-all active:scale-[98%] flex items-center gap-2"
                >
                    <i class="ri-save-fill text-base"></i>
                    <span id="submitText">Сохранить</span>
                </button>
            </div>
        </form>
    </div>

    <div id="toast" class="fixed bottom-6 right-6 transform translate-y-20 opacity-0 transition-all duration-300 z-50">
        <div class="bg-dark text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3">
            <span id="toast-message" class="text-sm font-bold">Сохранено</span>
        </div>
    </div>

    <script define:vars={{ collection, id, isCreate }}>
        const form = document.getElementById('editForm') as HTMLFormElement;
        const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
        const submitText = document.getElementById('submitText') as HTMLElement;
        
        function showToast(message: string, type = 'success') {
            const toast = document.getElementById('toast') as HTMLElement;
            const msg = document.getElementById('toast-message') as HTMLElement;
            
            msg.textContent = message;
            toast.className = `fixed bottom-6 right-6 transform transition-all duration-300 z-50 ${type === 'success' ? 'bg-emerald-600' : 'bg-rose-600'} text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3`;
            
            toast.classList.remove('translate-y-20', 'opacity-0');
            toast.classList.add('translate-y-0', 'opacity-100');
            
            setTimeout(() => {
                toast.classList.add('translate-y-20', 'opacity-0');
                toast.classList.remove('translate-y-0', 'opacity-100');
            }, 3000);
        }

        const normalizeSrc = (src: string) => {
            if (!src) return '';
            if (src.startsWith('http') || src.startsWith('/')) return src;
            if (src.startsWith('./')) return src.replace('./', '/');
            return '/' + src;
        };

        function updatePreview(e: Event) {
            const input = e.target as HTMLInputElement;
            const parent = input.closest('.image-upload-group') as HTMLElement;
            const preview = parent.querySelector('.preview-container') as HTMLElement;
            const img = preview.querySelector('img') as HTMLImageElement;
            if (input.value) {
                img.src = normalizeSrc(input.value);
                preview.style.display = 'block';
            } else {
                preview.style.display = 'none';
            }
        }

        document.querySelectorAll('.image-path-input').forEach(input => {
            input.addEventListener('input', updatePreview);
        });

        // Upload Logic
        document.querySelectorAll('.upload-trigger-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const parentDiv = btn.closest('.image-upload-group') as HTMLElement; 
                const textInput = parentDiv.querySelector('.image-path-input') as HTMLInputElement;
                
                // Create hidden file input
                const fileInput = document.createElement('input');
                fileInput.type = 'file';
                fileInput.accept = 'image/*';
                fileInput.style.display = 'none';
                document.body.appendChild(fileInput);
                
                fileInput.click();
                
                fileInput.onchange = async () => {
                    const files = fileInput.files;
                    if (!files || files.length === 0) return;
                    const file = files[0];
                    
                    const formData = new FormData();
                    formData.append('file', file);
                    
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = '<i class="ri-loader-4-line animate-spin"></i>';
                    (btn as HTMLButtonElement).disabled = true;
                    
                    try {
                        const res = await fetch('/api/upload', {
                            method: 'POST',
                            body: formData
                        });
                        const data = await res.json();
                        
                        if (data.success) {
                            textInput.value = data.url;
                            textInput.dispatchEvent(new Event('input'));
                            showToast('Фото загружено!');
                        } else {
                            showToast('Ошибка загрузки', 'error');
                        }
                    } catch {
                        showToast('Ошибка сети', 'error');
                    } finally {
                        btn.innerHTML = originalHTML;
                        (btn as HTMLButtonElement).disabled = false;
                        document.body.removeChild(fileInput);
                    }
                };
            });
        });

        form.addEventListener('submit', async (e: Event) => {
            e.preventDefault();
            
            submitBtn.disabled = true;
            submitText.textContent = 'Сохранение...';
            
            const formData = new FormData(form);
            const data: Record<string, unknown> = {};

            for (const [key, value] of formData.entries()) {
                if (key.includes('.')) {
                    const [parent, child] = key.split('.');
                    if (!data[parent]) data[parent] = {};
                    (data[parent] as Record<string, unknown>)[child] = value;
                } else {
                    data[key] = value;
                }
            }

            const checkboxes = form.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(cb => {
                const input = cb as HTMLInputElement;
                const name = input.name;
                const checked = input.checked;
                if (name.includes('.')) {
                    const [parent, child] = name.split('.');
                    if (!data[parent]) data[parent] = {};
                    (data[parent] as Record<string, unknown>)[child] = checked;
                } else {
                    data[name] = checked;
                }
            });

            if (!isCreate) {
                data.id = id;
            } else if (!data.id) {
                data.id = (data.slug as string || String(Date.now()));
            }

            try {
                const res = await fetch(`/api/${collection as string}/${data.id as string}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (res.ok) {
                    showToast('Успешно сохранено!');
                    setTimeout(() => {
                        window.location.href = `/admin/${collection as string}`;
                    }, 1000);
                } else {
                    showToast('Ошибка сохранения', 'error');
                    submitBtn.disabled = false;
                    submitText.textContent = 'Сохранить';
                }
            } catch {
                showToast('Ошибка сети', 'error');
                submitBtn.disabled = false;
                submitText.textContent = 'Сохранить';
            }
        });
        
        // Delete Logic
        const deleteBtn = document.getElementById('deleteBtn') as HTMLButtonElement;
        if (deleteBtn) {
            deleteBtn.addEventListener('click', async () => {
                const title = deleteBtn.getAttribute('data-title');
                if (!confirm(`Вы уверены, что хотите удалить "${title}"?`)) return;
                
                try {
                    const res = await fetch(`/api/${collection as string}/${id as string}`, { method: 'DELETE' });
                    if (res.ok) {
                        showToast('Элемент удален');
                        setTimeout(() => window.location.href = `/admin/${collection as string}`, 1000);
                    } else {
                        showToast('Ошибка удаления', 'error');
                    }
                } catch {
                    showToast('Ошибка сети', 'error');
                }
            });
        }
    </script>
</AdminLayout>
