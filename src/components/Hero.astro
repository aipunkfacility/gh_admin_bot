---
import { Image } from 'astro:assets';
import heroDesktop from '../assets/images/hero-desktop.webp';
import heroMobile from '../assets/images/hero-mobile.webp';

interface Props {
  mainTitle: string;
  mainSubtitle: string;
}

const { mainTitle, mainSubtitle } = Astro.props;
---

<section id="hero" class="hero-section" style="height: calc(100vh - 64px);">

  <div class="hero-bg">
    <Image 
      src={heroDesktop} 
      alt={mainTitle}
      class="hidden lg:block w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
    />

    <Image 
      src={heroMobile} 
      alt={mainTitle}
      class="block lg:hidden w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
    />
    <div class="hero-overlay"></div>
  </div>

  <div class="hero-content">
    <div class="hero-text">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 drop-shadow-md">
        {mainTitle}
      </h1>
      <p class="text-xl md:text-2xl drop-shadow-md text-gray-100">
        {mainSubtitle}
      </p>
    </div>

    <div class="hero-buttons flex flex-col sm:flex-row gap-4 justify-center mt-8">
      <a href="#excursions" class="bg-orange-500 text-white px-8 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-orange-600 hover:scale-105 transition flex items-center justify-center gap-3">
        <i class="ri-map-2-line text-2xl"></i>
        Выбрать экскурсию
      </a>
      <a href="#transport" class="bg-white text-gray-800 px-8 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-gray-100 hover:scale-105 transition flex items-center justify-center gap-3">
        <i class="ri-motorbike-line text-orange-500 text-2xl"></i>
        Арендовать байк
      </a>
    </div>
  </div>
</section>
