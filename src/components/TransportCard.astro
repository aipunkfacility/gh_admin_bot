---
import { formatServiceDetails } from '../js/utils.js';

interface Category {
  id: string;
  slug: string;
  title: string;
  badgeTitle?: string;
}

interface Props {
  title: string;
  image?: string;
  categoryId: string;
  useCases?: string;
  details?: string;
  benefits?: string[];
  specs?: string[];
  pricePerDay?: string;
  categories: Category[];
  features?: string[];
}

const { title, image, categoryId, useCases, details, benefits, specs, features, pricePerDay, categories } = Astro.props;
const formattedDetails = formatServiceDetails(details);
const category = categories.find(c => c.id === categoryId);
const hasDetails = !!(formattedDetails || benefits?.length || specs?.length || features?.length);
const message = `Хочу забронировать: ${title}`;
const safeMessage = message.replace(/'/g, "\\'");

function getCategoryColor(slug: string) {
  const colors: Record<string, string> = {
    'standard': 'bg-green-100 text-green-800',
    'comfort': 'bg-blue-100 text-blue-800',
    'maxi': 'bg-yellow-100 text-yellow-800',
    'moto': 'bg-red-100 text-red-800',
    'car': 'bg-slate-100 text-slate-800'
  };
  return colors[slug] || 'bg-gray-100 text-gray-800';
}
---

<div 
  class={`service-card bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition flex flex-col ${hasDetails ? 'is-clickable' : ''}`}
  onclick={hasDetails ? "toggleServiceAccordion(this)" : null}
  onkeydown={hasDetails ? "if(event.key === 'Enter' || event.key === ' ') { event.preventDefault(); toggleServiceAccordion(this); }" : null}
  role={hasDetails ? "button" : null}
  tabindex={hasDetails ? "0" : null}
  aria-expanded={hasDetails ? "false" : null}
>
  {image && (
    <div class="aspect-card overflow-hidden relative group flex-shrink-0">
      <img 
        src={image} 
        alt={title} 
        width="600"
        height="400"
        class="w-full h-full object-cover object-center block group-hover:scale-105 transition-transform duration-700" 
        loading="lazy"
      />
      {category && (
        <span class={`absolute top-4 left-4 px-3 py-1 text-xs font-black rounded-lg shadow-sm uppercase tracking-wider ${getCategoryColor(category.slug)}`}>
          {category.badgeTitle || category.title}
        </span>
      )}
      
      {pricePerDay && (
        <div class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1.5 rounded-lg shadow-lg flex items-center gap-1.5">
           <i class="ri-price-tag-3-line text-orange-500 font-bold"></i>
           <span class="text-xs font-black text-dark uppercase tracking-wider">{pricePerDay} / день</span>
        </div>
      )}
    </div>
  )}

  <div class="bg-slate-50 p-5 border-b border-slate-100 flex-shrink-0 flex justify-between items-center gap-4">
    <h3 class="text-xl font-bold text-dark leading-tight">{title}</h3>
    {hasDetails && <div class="w-8 h-8 rounded-full bg-white shadow-sm flex items-center justify-center flex-shrink-0"><i class="ri-arrow-down-s-line accordion-chevron text-xl text-primary transition-transform duration-300"></i></div>}
  </div>

  <div class="p-6 flex flex-col flex-grow">
    <p class="service-short-desc text-slate-800 font-medium whitespace-pre-wrap mb-3 leading-relaxed">{useCases}</p>
    
    {hasDetails && (
      <div class="service-details-container">
        <div class="service-details-content space-y-6 text-sm text-slate-600">
          
          <div class="bg-orange-50/50 rounded-xl p-5 space-y-5">
              {features && features.length > 0 && (
                 <div>
                   <h4 class="font-bold flex items-center text-dark mb-2"><i class="ri-star-smile-line text-amber-500 mr-2 text-lg"></i>Особенности</h4>
                   <ul class="pl-7 list-disc list-outside opacity-90 marker:text-amber-500 space-y-1">
                      {features.map(f => <li>{f}</li>)}
                   </ul>
                 </div>
              )}

              {benefits && benefits.length > 0 && (
                 <div>
                   <h4 class="font-bold flex items-center text-dark mb-2"><i class="ri-thumb-up-line text-blue-500 mr-2 text-lg"></i>Преимущества</h4>
                   <ul class="pl-7 list-disc list-outside opacity-90 marker:text-blue-500 space-y-1">
                      {benefits.map(b => <li>{b}</li>)}
                   </ul>
                 </div>
              )}
              
              {specs && specs.length > 0 && (
                 <div>
                   <h4 class="font-bold flex items-center text-dark mb-2"><i class="ri-settings-3-line text-slate-500 mr-2 text-lg"></i>Характеристики</h4>
                   <ul class="pl-7 list-disc list-outside opacity-90 marker:text-slate-400 space-y-1">
                      {specs.map(s => <li>{s}</li>)}
                   </ul>
                 </div>
              )}
          </div>
          
           {formattedDetails && (!features?.length) && (
            <div class="prose prose-sm max-w-none prose-p:text-slate-600 prose-headings:text-dark prose-strong:text-dark" set:html={formattedDetails}></div>
          )}

        </div>
      </div>
    )}

    <button 
      onclick={`event.stopPropagation(); openWhatsApp('${safeMessage}')`} 
      class="w-full bg-orange-500 text-white py-3.5 px-4 rounded-xl font-bold hover:bg-orange-600 transition mt-auto flex items-center justify-center shadow-lg shadow-orange-500/20 active:scale-[0.98]"
    >
      <i class="ri-motorbike-fill mr-2 text-xl"></i>Забронировать
    </button>
  </div>
</div>
