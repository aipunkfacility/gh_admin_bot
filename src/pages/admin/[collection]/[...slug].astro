---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { schemas } from '../../../lib/schemas';
import { getItem, getCollection as getCollectionData } from '../../../lib/data-store';

const { collection, slug } = Astro.params;
const id = Array.isArray(slug) ? slug[0] : slug;
const isCreate = !id || id === 'create';
const isSiteMeta = collection === 'site-meta';

const collectionNames = {
    'excursions': 'Экскурсии',
    'transport-items': 'Транспорт',
    'accommodations': 'Жилье',
    'services': 'Услуги',
    'site-meta': 'Настройки'
};

const schema = schemas[collection];
if (!schema) {
    return Astro.redirect('/admin');
}

let item = {};

if (isSiteMeta) {
    const data = await getCollectionData(`${collection}.json`);
    item = Array.isArray(data) ? {} : data;
} else if (!isCreate) {
    item = await getItem(`${collection}.json`, id);
    if (!item) {
        return Astro.redirect(`/admin/${collection}`);
    }
} else {
    schema.fields.forEach(f => {
        if (f.default !== undefined) item[f.name] = f.default;
    });
}

const getValue = (obj, path) => {
    return path.split('.').reduce((acc, part) => acc && acc[part], obj);
};

const normalizeSrc = (src) => {
    if (!src) return '';
    if (src.startsWith('http') || src.startsWith('/')) return src;
    if (src.startsWith('./')) return src.replace('./', '/');
    return '/' + src;
};

const collectionTitle = collectionNames[collection] || collection;
const pageTitle = isSiteMeta ? 'Настройки сайта' : (isCreate ? `Новая запись: ${collectionTitle}` : `Редактирование: ${item.title || id}`);
---

<AdminLayout title={pageTitle}>
    <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <a href={`/admin/${collection}`} class="inline-flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-action transition-colors mb-3">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                    {collectionTitle}
                </a>
                <h1 class="text-3xl font-extrabold text-dark tracking-tight">
                    {isSiteMeta ? '⚙️ Настройки сайта' : (isCreate ? '✨ Новая запись' : `✏️ ${item.title || 'Редактирование'}`)}
                </h1>
                <div class="h-1 w-12 bg-action mt-2"></div>
            </div>
        </div>

        <form id="editForm" class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="h-1 bg-gradient-to-r from-action via-orange-400 to-amber-400"></div>
            
            <div class="p-8 md:p-10 space-y-8">
                {schema.fields.map((field, index) => (
                    <div class="space-y-2 animate-fadeIn" style={`animation-delay: ${index * 50}ms`}>
                        <label class="flex items-center gap-2 text-[10px] font-black text-slate-500 uppercase tracking-widest">
                            {field.label}
                            {field.required && <span class="text-action text-xs">*</span>}
                        </label>
                        
                        {field.type === 'text' && (
                            <input 
                                type="text" 
                                name={field.name} 
                                value={getValue(item, field.name) || ''} 
                                required={field.required}
                                class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark placeholder:text-slate-300"
                                placeholder={field.help || `Введите ${field.label.toLowerCase()}`}
                            />
                        )}

                        {field.type === 'textarea' && (
                            <textarea 
                                name={field.name} 
                                rows={field.rows || 5} 
                                required={field.required}
                                class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark placeholder:text-slate-300 resize-y min-h-[120px]"
                                placeholder={field.help || `Введите ${field.label.toLowerCase()}`}
                            >{getValue(item, field.name) || ''}</textarea>
                        )}

                        {field.type === 'number' && (
                            <input 
                                type="number" 
                                name={field.name} 
                                value={getValue(item, field.name) || ''} 
                                required={field.required}
                                class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark"
                            />
                        )}

                        {field.type === 'checkbox' && (
                            <label class="flex items-center gap-4 bg-slate-50 p-5 rounded-xl border border-slate-200 cursor-pointer hover:border-action/30 transition-all group">
                                <div class="relative">
                                    <input 
                                        type="checkbox" 
                                        name={field.name} 
                                        checked={getValue(item, field.name) !== false}
                                        class="peer sr-only"
                                    />
                                    <div class="w-12 h-7 bg-slate-300 rounded-full peer-checked:bg-action transition-colors"></div>
                                    <div class="absolute left-1 top-1 w-5 h-5 bg-white rounded-full shadow-sm peer-checked:translate-x-5 transition-transform"></div>
                                </div>
                                <div>
                                    <span class="text-sm font-bold text-dark block">{field.help || field.label}</span>
                                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">
                                        {getValue(item, field.name) !== false ? 'Включено' : 'Выключено'}
                                    </span>
                                </div>
                            </label>
                        )}
                        
                        {field.type === 'select' && (
                            <div class="relative">
                                <select 
                                    name={field.name} 
                                    class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark appearance-none cursor-pointer"
                                >
                                    {field.options && field.options.map(opt => (
                                        <option value={opt} selected={getValue(item, field.name) === opt}>{opt}</option>
                                    ))}
                                </select>
                                <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </div>
                        )}

                        {field.type === 'image' && (
                            <div class="space-y-4">
                                <div class="flex items-stretch gap-3">
                                    <input 
                                        type="text" 
                                        name={field.name} 
                                        value={getValue(item, field.name) || ''} 
                                        class="image-path-input flex-1 px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-action/20 focus:border-action focus:bg-white transition-all font-semibold text-dark" 
                                        placeholder="/images/example.jpg"
                                    />
                                    <button 
                                        type="button" 
                                        class="upload-trigger-btn px-6 rounded-xl bg-dark text-white text-[10px] font-black uppercase tracking-widest hover:bg-slate-800 transition-all flex items-center justify-center gap-2 whitespace-nowrap active:scale-[98%]"
                                    >
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                        <span>Загрузить</span>
                                    </button>
                                </div>
                                <div class="preview-container" style={getValue(item, field.name) ? '' : 'display:none'}>
                                    <div class="relative w-40 h-40 rounded-xl overflow-hidden border-2 border-slate-100 shadow-sm group">
                                        <img src={normalizeSrc(getValue(item, field.name))} class="w-full h-full object-cover" />
                                        <div class="absolute inset-0 bg-dark/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                            <span class="text-[10px] text-white font-black uppercase tracking-wider">Предпросмотр</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        )}
                        
                        {field.help && field.type !== 'checkbox' && field.type !== 'image' && (
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest flex items-center gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                {field.help}
                            </p>
                        )}
                    </div>
                ))}
            </div>

            <div class="p-8 md:p-10 bg-slate-50 border-t border-slate-100 flex flex-col sm:flex-row justify-between items-center gap-4">
                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                    {isCreate ? 'Заполните обязательные поля' : `ID: ${id}`}
                </p>
                <div class="flex items-center gap-3">
                    <a href={`/admin/${collection}`} class="px-6 py-3 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-dark transition-colors">
                        Отмена
                    </a>
                    <button 
                        type="submit" 
                        id="submitBtn"
                        class="group px-8 py-4 bg-action hover:bg-action-hover text-white text-[10px] font-black uppercase tracking-widest rounded-xl shadow-lg shadow-orange-500/20 transition-all active:scale-[98%] flex items-center gap-2"
                    >
                        <svg class="w-4 h-4 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                        <span id="submitText">Сохранить</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div id="toast" class="fixed bottom-6 right-6 transform translate-y-20 opacity-0 transition-all duration-300 z-50">
        <div id="toast-container" class="bg-dark text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3">
            <span id="toast-icon">✓</span>
            <span id="toast-message" class="font-semibold">Сохранено</span>
        </div>
    </div>

    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fadeIn {
            animation: fadeIn 0.3s ease-out forwards;
            opacity: 0;
        }
    </style>

    <script define:vars={{ collection, id, isCreate, isSiteMeta }}>
        const form = document.getElementById('editForm');
        const submitBtn = document.getElementById('submitBtn');
        const submitText = document.getElementById('submitText');
        
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const container = document.getElementById('toast-container');
            const icon = document.getElementById('toast-icon');
            const msg = document.getElementById('toast-message');
            
            icon.textContent = type === 'success' ? '✓' : '✗';
            msg.textContent = message;
            container.className = type === 'success' 
                ? 'bg-emerald-600 text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3'
                : 'bg-rose-600 text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3';
            
            toast.classList.remove('translate-y-20', 'opacity-0');
            toast.classList.add('translate-y-0', 'opacity-100');
            
            setTimeout(() => {
                toast.classList.add('translate-y-20', 'opacity-0');
                toast.classList.remove('translate-y-0', 'opacity-100');
            }, 3000);
        }
        
        const normalizeSrc = (src) => {
            if (!src) return '';
            if (src.startsWith('http') || src.startsWith('/')) return src;
            if (src.startsWith('./')) return src.replace('./', '/');
            return '/' + src;
        };

        document.querySelectorAll('.image-path-input').forEach(input => {
            input.addEventListener('input', (e) => {
                const parent = input.closest('.space-y-4');
                const preview = parent.querySelector('.preview-container');
                const img = preview.querySelector('img');
                if (e.target.value) {
                    img.src = normalizeSrc(e.target.value);
                    preview.style.display = 'block';
                } else {
                    preview.style.display = 'none';
                }
            });
        });

        document.querySelectorAll('.upload-trigger-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const parentDiv = btn.closest('.space-y-4');
                const textInput = parentDiv.querySelector('input[type="text"]');
                const previewContainer = parentDiv.querySelector('.preview-container');
                const imgPreview = previewContainer.querySelector('img');
                
                const fileInput = document.createElement('input');
                fileInput.type = 'file';
                fileInput.accept = 'image/*';
                fileInput.style.display = 'none';
                document.body.appendChild(fileInput);
                
                fileInput.click();
                
                fileInput.onchange = async () => {
                    const file = fileInput.files[0];
                    if (!file) return;
                    
                    const formData = new FormData();
                    formData.append('file', file);
                    
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg><span>Загрузка...</span>';
                    btn.disabled = true;
                    
                    try {
                        const res = await fetch('/api/upload', {
                            method: 'POST',
                            body: formData
                        });
                        const data = await res.json();
                        
                        if (data.success) {
                            textInput.value = data.url;
                            imgPreview.src = normalizeSrc(data.url);
                            previewContainer.style.display = 'block';
                            showToast('Изображение загружено');
                        } else {
                            showToast('Ошибка: ' + (data.error || 'Неизвестная ошибка'), 'error');
                        }
                    } catch (e) {
                        console.error(e);
                        showToast('Ошибка сети при загрузке', 'error');
                    } finally {
                        btn.innerHTML = originalHTML;
                        btn.disabled = false;
                        document.body.removeChild(fileInput);
                    }
                };
            });
        });

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            submitBtn.disabled = true;
            submitText.textContent = 'Сохранение...';
            
            const formData = new FormData(form);
            const data = {};

            for (let [key, value] of formData.entries()) {
                if (key.includes('.')) {
                    const [parent, child] = key.split('.');
                    if (!data[parent]) data[parent] = {};
                    data[parent][child] = value;
                } else {
                    data[key] = value;
                }
            }

            const checkboxes = form.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(cb => {
                if (cb.name.includes('.')) {
                    const [parent, child] = cb.name.split('.');
                    if (!data[parent]) data[parent] = {};
                    data[parent][child] = cb.checked;
                } else {
                    data[cb.name] = cb.checked;
                }
            });
            
            let url;
            if (isSiteMeta) {
                url = `/api/${collection}/settings`;
            } else {
                if (!isCreate) {
                    data.id = id;
                } else if (!data.id) {
                    data.id = (data.slug || String(Date.now()));
                }
                url = `/api/${collection}/${data.id}`;
            }

            try {
                const res = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (res.ok) {
                    showToast('Успешно сохранено!');
                    setTimeout(() => {
                        window.location.href = `/admin/${collection}`;
                    }, 1000);
                } else {
                    const errData = await res.json();
                    const errorMsg = errData.details ? errData.details.join(', ') : (errData.error || 'Проверьте данные');
                    showToast('Ошибка: ' + errorMsg, 'error');
                    submitBtn.disabled = false;
                    submitText.textContent = 'Сохранить';
                }
            } catch (err) {
                console.error(err);
                showToast('Ошибка сети', 'error');
                submitBtn.disabled = false;
                submitText.textContent = 'Сохранить';
            }
        });
    </script>
</AdminLayout>
